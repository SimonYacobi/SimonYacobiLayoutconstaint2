<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tV5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="random number5"
        app:layout_constraintBottom_toBottomOf="@+id/tV1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toEndOf="@+id/tV3"
        app:layout_constraintTop_toTopOf="@+id/tV1" />

    <TextView
        android:id="@+id/tV1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="72dp"
        android:text="random number1"
        app:layout_constraintEnd_toStartOf="@+id/tV5"
        app:layout_constraintStart_toEndOf="@+id/tV3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tV2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:text="random number2"
        app:layout_constraintEnd_toEndOf="@+id/tV1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tV1"
        app:layout_constraintTop_toBottomOf="@+id/tV1" />


    <TextView
        android:id="@+id/tV3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:text="random number 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tV4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="56dp"
        android:text="random number 4"
        app:layout_constraintBottom_toBottomOf="@+id/tV2"
        app:layout_constraintEnd_toEndOf="@+id/tV3"
        app:layout_constraintStart_toStartOf="@+id/tV3"
        app:layout_constraintTop_toBottomOf="@+id/tV3" />

    <TextView
        android:id="@+id/tV6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:text="random number6"
        app:layout_constraintBottom_toBottomOf="@+id/tV2"
        app:layout_constraintEnd_toEndOf="@+id/tV5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tV5"
        app:layout_constraintTop_toBottomOf="@+id/tV5" />

    <ImageView
        android:id="@+id/iV1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/x"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iV2"
        app:layout_constraintEnd_toEndOf="@+id/eT1"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/eT1"
        app:layout_constraintTop_toBottomOf="@+id/eT1" />

    <ImageView
        android:id="@+id/iV2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/x"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/eT2"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/eT2"
        app:layout_constraintTop_toBottomOf="@+id/eT2" />

    <ImageView
        android:id="@+id/iV3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/x"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iV1"
        app:layout_constraintEnd_toEndOf="@+id/eT3"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/eT3"
        app:layout_constraintTop_toBottomOf="@+id/eT3" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="99dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:onClick="check1"
        android:text="check"
        app:layout_constraintBottom_toBottomOf="@+id/btn3"
        app:layout_constraintEnd_toEndOf="@+id/iV1"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="@+id/iV1"
        app:layout_constraintTop_toBottomOf="@+id/iV1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="99dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:onClick="check2"
        android:text="check"
        app:layout_constraintBottom_toBottomOf="@+id/btn1"
        app:layout_constraintEnd_toEndOf="@+id/iV2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iV2"
        app:layout_constraintTop_toBottomOf="@+id/iV2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="99dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:onClick="check3"
        android:text="check"
        app:layout_constraintEnd_toEndOf="@+id/iV3"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/iV3"
        app:layout_constraintTop_toBottomOf="@+id/iV3" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="114dp"
        android:layout_height="70dp"
        android:layout_marginBottom="28dp"
        android:onClick="restart"
        android:text="restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.829" />

    <EditText
        android:id="@+id/eT1"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Enter answer"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/eT2"
        app:layout_constraintEnd_toEndOf="@+id/tV2"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/tV2"
        app:layout_constraintTop_toBottomOf="@+id/tV2" />

    <EditText
        android:id="@+id/eT2"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Enter answer"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tV4"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="@+id/tV4"
        app:layout_constraintTop_toBottomOf="@+id/tV4" />

    <EditText
        android:id="@+id/eT3"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Enter answer"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/eT1"
        app:layout_constraintEnd_toEndOf="@+id/tV6"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toStartOf="@+id/tV6"
        app:layout_constraintTop_toBottomOf="@+id/tV6" />

</androidx.constraintlayout.widget.ConstraintLayout>